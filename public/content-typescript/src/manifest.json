{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "version": "0.0.1",
  "name": "Extension.js - TypeScript Content Example",
  "description": "Content script example built with TypeScript. Mounts a small UI and uses typed modules.",
  "icons": {
    "16": "images/typescript.png",
    "48": "images/typescript.png",
    "128": "images/typescript.png"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "chromium:service_worker": "background.ts",
    "firefox:scripts": ["background.ts"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/scripts.ts"]
    }
  ]
}

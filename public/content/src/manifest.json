{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "version": "0.0.1",
  "name": "Extension.js - JavaScript Content Example",
  "description": "Content script example that injects a small badge into web pages to demonstrate DOM injection and styling in an extension.",
  "icons": {
    "16": "images/javascript.png",
    "48": "images/javascript.png",
    "128": "images/javascript.png"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "chromium:service_worker": "background.js",
    "firefox:scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/scripts.js"]
    }
  ]
}
